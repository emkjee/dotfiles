{
  "window.zoomLevel": 1,
  "zenMode.centerLayout": false,
  "diffEditor.ignoreTrimWhitespace": false,

  // workbench
  "workbench.colorTheme": "Winter is Coming (Dark Blue)",
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorCustomizations": {},
  "search.showLineNumbers": true,

  // theme
  "everforest.highContrast": true,
  "everforest.italicKeywords": true,
  "everforest.darkSelection": "orange",
  "everforest.darkCursor": "green",
  "everforest.darkContrast": "medium",
  "everforest.darkWorkbench": "high-contrast",

  // editor
  "editor.autoIndent": "full",
  "editor.minimap.enabled": false,
  "editor.wordWrap": "off",
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.multiCursorModifier": "alt",

  //editor.font settings
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.fontSize": 15,
  "editor.fontLigatures": false,
  "editor.fontWeight": "normal",
  "editor.lineHeight": 25,
  "editor.letterSpacing": 0.3,

  //editor.cursor settings
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line",

  // terminal
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontWeight": "normal",

  //json
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // json
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // python
  "python.locator": "js",
  "python.defaultInterpreterPath": "/usr/local/bin/python3.13",

  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },

  // javascript
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  }
}
