{
  "window.zoomLevel": 1,
  "zenMode.centerLayout": false,
  "diffEditor.ignoreTrimWhitespace": false,

  // workbench
  "workbench.colorTheme": "Everforest Dark",
  "workbench.iconTheme": "vscode-icons",

  // theme
  "everforest.highContrast": true,
  "everforest.italicKeywords": true,
  "everforest.darkSelection": "orange",
  "everforest.darkCursor": "green",
  "everforest.darkContrast": "medium",
  "everforest.darkWorkbench": "high-contrast",

  // editor
  "editor.minimap.enabled": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.fontSize": 15,
  "editor.fontWeight": "normal",

  // terminal
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontWeight": "normal",

  //json
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // python
  "python.locator": "js",
  "python.defaultInterpreterPath": "/usr/local/bin/python3.13",

  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true
  },

  // javascript
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // json
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
